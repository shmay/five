= form_for(@game, html: {class: 'form-horizontal', role: 'form'}) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, class: 'col-lg-2 control-label'
    .col-lg-4
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :about, class: 'col-lg-2 control-label'
    .col-lg-9
      = f.text_field :about, class: 'form-control'
      %span.help-block A short blurb about the game
  .actions
    = f.submit class: 'btn btn-primary'
