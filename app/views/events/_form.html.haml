= form_for(@event, html: {class: 'form-horizontal', role: 'form'}) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title, class: 'col-lg-2 control-label'
    .col-lg-3
      = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :about, class: 'col-lg-2 control-label'
    .col-lg-3
      = f.text_area :about, class: 'input', rows:15, cols:50
  .form-group
    = f.label :start_time, "Start", class: 'col-lg-2 control-label'
    .col-lg-7
      = f.datetime_select :start_time, ampm: true
  .form-group
    = f.label :finish_time, "Finish", class: 'col-lg-2 control-label'
    .col-lg-7
      = f.datetime_select :finish_time, ampm: true
  .actions
    = f.submit class: 'btn btn-primary'
