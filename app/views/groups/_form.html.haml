= form_for(@group, html: {class: 'form-horizontal', role: 'form'}) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, class: 'col-lg-2 control-label'
    .col-lg-3
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :info, class: 'col-lg-2 control-label'
    .col-lg-3
      = f.text_area :info, class: 'form-control', rows: 10
      %span.help-block Describe your group
  .actions
    = f.submit class: 'btn btn-primary'
